<div class="container my-5">
	<h2 class="mb-4">Your Shopping Cart</h2>
	<div id="cart-main">
		<div id="cart-loading" class="text-center my-4">
			<span class="spinner-border"></span> Loading your cart...
		</div>
		<div id="cart-error" class="alert alert-danger d-none">Could not load cart.</div>
		<div id="cart-empty" class="alert alert-info d-none">Your cart is empty.</div>
		<div id="cart-list" class="cart-list"></div>
		<div id="cart-summary" class="cart-summary mt-4"></div>
		<div class="my-4 d-flex justify-content-between">
			<button id="cart-clear-btn" class="btn btn-outline-danger d-none">Clear Cart</button>
			<button id="cart-checkout-btn" class="btn btn-primary d-none">Proceed to Checkout</button>
		</div>
	</div>
</div>

<script src="/wwwroot/js/cart.js"></script>